<%
    ranks = ["2", "3", "4", "5", "6", "7", "8", "9", "10", "ace", "jack", "king", "queen"]
    suits = ["clubs", "diamonds", "hearts", "spades"]
    deck = []

    for rank in ranks
        for suit in suits
            # new_card = rank + "_of_" + suit 
            # deck.push(new_card)
            deck << "#{rank}_of_#{suit}"
        end
    end
    
    #card = deck.sample(5)
    #an experienced developer would think: how does it work in real life?
    shuffled_deck = deck.shuffle
    hand = shuffled_deck[0,5]
%>
<h1>Your hand of 5 cards</h1>

<% for card in hand %>
<img src="/images/cards/<%=card%>.svg">
<% end %>