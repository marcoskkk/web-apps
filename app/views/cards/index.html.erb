<%
    ranks = ["2", "3", "4", "5", "6", "7", "8", "9", "10", "ace", "jack", "king", "queen"]
    suits = ["clubs", "diamonds", "hearts", "spades"]
    deck = []

    for rank in ranks
        for suit in suits
            # new_card = rank + "_of_" + suit 
            # deck.push(new_card)
            deck << "#{rank}_of_#{suit}"
        end
    end
    
    card = deck.sample(5)
%>
<h1>Your hand of 5 cards</h1>

<img src="/images/cards/<%=card[0]%>.svg">
<img src="/images/cards/<%=card[1]%>.svg">
<img src="/images/cards/<%=card[2]%>.svg">
<img src="/images/cards/<%=card[3]%>.svg">
<img src="/images/cards/<%=card[4]%>.svg">